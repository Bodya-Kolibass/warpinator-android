<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Identity">

        <slowscript.warpinator.EditTextPreference
            android:defaultValue="Android"
            android:key="displayName"
            android:title="Display name" />

        <Preference
            android:key="picture"
            android:title="Profile picture"
            android:enabled="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Transfer settings">

        <Preference
            android:key="downloadDir"
            android:title="Downloads directory" />

        <SwitchPreferenceCompat
            android:key="notifyIncoming"
            android:title="Show notification about incoming files"
            android:defaultValue="true"
            android:summary="This may be affected by Android's notification settings" />

        <SwitchPreferenceCompat
            android:key="allowOverwrite"
            android:title="Allow overwriting"
            android:defaultValue="false"
            android:summaryOn="Incoming files with a name that already exists will overwrite the existing ones"
            android:summaryOff="Incoming files with a name that already exists will be renamed" />

    </PreferenceCategory>

    <PreferenceCategory>

        <SwitchPreferenceCompat
            android:title="Run in background"
            android:key="background"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Network">

        <slowscript.warpinator.EditTextPreference
            android:key="groupCode"
            android:title="Group code"
            android:defaultValue="Warpinator" />

        <slowscript.warpinator.EditTextPreference
            android:title="Port"
            android:key="port"
            android:defaultValue="42000" />

    </PreferenceCategory>

</PreferenceScreen>